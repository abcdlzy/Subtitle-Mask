<Fluent:RibbonWindow x:Class="WpfMask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Fluent="urn:fluent-ribbon"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMask"
        mc:Ignorable="d" Background="Black" Title="SubtitleMask"
        Height="30" Width="400" IsIconVisible="False" Deactivated="RibbonWindow_Deactivated" Topmost="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBlock></TextBlock>
        </Grid>
    </Grid>
</Fluent:RibbonWindow>